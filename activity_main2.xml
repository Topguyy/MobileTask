<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/topguy"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:id="@+id/topguyImg"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Back Topguy!!"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_below="@id/topguyImg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:id="@+id/welcomeTxt"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cds.mohamedtarek40690@alexu.edu.eg"
        android:textSize="20sp"
        android:textColor="#A0A0A0"
        android:textStyle="italic"
        android:layout_below="@+id/welcomeTxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:id="@+id/emailTxt"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name : Mohamed Tarek El Sayed Mahmoud ElTobgui"
        android:textSize="18sp"
        android:textColor="#A0A0A0"
        android:textStyle="italic"
        android:layout_below="@+id/emailTxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:id="@+id/nameTxt"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID : 20221440690"
        android:textSize="18sp"
        android:textColor="#A0A0A0"
        android:textStyle="italic"
        android:layout_below="@+id/nameTxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:id="@+id/idTxt"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Department : CyberSecurity( Level 3 )"
        android:textSize="18sp"
        android:textColor="#A0A0A0"
        android:textStyle="italic"
        android:layout_below="@+id/idTxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:id="@+id/depTxt"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CGPA : 3.62"
        android:textSize="18sp"
        android:textColor="#A0A0A0"
        android:textStyle="italic"
        android:layout_below="@+id/depTxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:id="@+id/gpaTxt"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click To view Mohamed's Hobbies"
        android:backgroundTint="@color/labany"
        android:layout_below="@id/gpaTxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:id="@+id/infoBtn"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:backgroundTint="@color/labany"
        android:layout_below="@id/infoBtn"
        android:layout_centerHorizontal="true"
        android:id="@+id/backBtn"
        />
</RelativeLayout>